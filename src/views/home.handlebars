{{!-- MENSAJE BIENVENIDA --}}
<div class="welcome-message">
    <p>Â¡Bienvenido {{nickName}}!</p>
</div>

{{!-- PRODUCTOS --}}

<div id="content-home" class="content active">
    <div id="products-container" class="products-container">
        {{#each products}}
            <div data-product="{{this._id}}" class="product-card">
                <div class="product-details">
                    <img src="/images/{{this.thumbnails.[0]}}" alt="{{this.title}}">
                    <div class="product-card-content">
                        <h3>{{this.title}}</h3>
                        <p>${{this.price}}</p>
                    </div>
                </div>
                <button class="add-to-cart">
                    <span class="material-symbols-outlined">add_shopping_cart</span>
                </button>
            </div>
        {{/each}}
    </div>
</div>

{{!-- PAGINACION --}}

<div class="pagination">
    {{#if prevLink}}
        <div>
            <a href="{{prevLink}}" class="btn">
                <span class="material-symbols-outlined">arrow_back</span>
            </a>    
        </div>
        
    {{else}}
        <div class="btn disabled">
            <span class="material-symbols-outlined">arrow_back</span>
        </div>
    {{/if}}

    <span class="current-page">{{page}}</span>

    {{#if nextLink}}
    <div>
        <a href="{{nextLink}}" class="btn">
            <span class="material-symbols-outlined">arrow_forward</span>
        </a>
    </div>
    {{else}}
        <div class="btn disabled"><span class="material-symbols-outlined">arrow_forward</span></div>
    {{/if}}
</div>

